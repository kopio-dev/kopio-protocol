{
  "mochaExplorer.require": [
    "ts-node/register",
    "tsconfig-paths/register"
  ],
  "mochaExplorer.files": [
    "./src/test/**/*.ts"
  ],
  "mochaExplorer.timeout": 120000,
  "mochaExplorer.multiFileSuites": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.exclude": {
    ".husky": true,
    "bun.lockb": true,
    "node_modules": true
  },
  "search.exclude": {
    "**/bower_components": true,
    "**/*.code-search": true,
    "pnpm-lock.yaml": true,
    "yarn.lock": true,
    "bun.lockb": true,
    "lib/**": true,
    "**/typechain/**": true,
    "mochawesome-report": true,
    "**/deployments/**": true,
    "node_modules/**": true,
    "docs/**/*": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "explicit"
    }
  },
  "solidity.compiler": {
    "outDir": "build/vsc",
    "type": "Remote",
    "npm": "solc",
    "remote": "v0.8.27+commit.40a35a09",
    "local": ""
  },
  "solidity.project.libs": [
    "lib"
  ],
  "solidity.project.libSources": [
    "src",
    "contracts"
  ],
  "solidity.project.monorepo": false,
  "solidity.formatter": "prettier",
  "solidity.linter.type": "solhint",
  "solidity.linter.rules": {
    "state-visibility": "off"
  },
  "solidity.project.sources": "src",
  "solidity.validation": {
    "onChange": true,
    "onSave": false,
    "onOpen": true,
    "delay": 150
  },
  "solidity.test": {
    "executeOnSave": false,
    "verbosity": 2
  },
  "workbench.colorCustomizations": {
    "statusBar.background": "#e86753",
    "statusBar.border": "#fce7ea",
    "statusBar.foreground": "#040303"
  }
}